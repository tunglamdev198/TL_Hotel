<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.HotelInformationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ViewFlipper
            android:id="@+id/sliderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<ImageView-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/imgLogo"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/tbHomePage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_marginStart="@dimen/margin_top"
                    android:id="@+id/btn_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear_white_24dp" />

                <ImageView
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtLocation"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="@dimen/margin_top"
                android:text="Tuấn Vũ Hotel"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/text_size_edittext" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="@dimen/margin_top"
                android:text="Cô Tô"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/text_size_edittext" />

        </RelativeLayout>
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="4"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="@dimen/margin_top"
        android:rowCount="2">

        <android.support.v7.widget.CardView
            android:id="@+id/cvNotification"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/margin_start"
            android:layout_marginRight="@dimen/margin_end"
            android:layout_marginBottom="@dimen/margin_start"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/margin_top"
            app:cardElevation="@dimen/margin_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <com.truonglam.tl_hotel.ui.widgets.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_notification"
                    android:textColor="#EDDC67"
                    android:textSize="@dimen/icon_menu_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="@string/hotel_notification"
                    android:textSize="@dimen/text_size_edittext" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvService"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/margin_start"
            android:layout_marginRight="@dimen/margin_end"
            android:layout_marginBottom="@dimen/margin_start"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/margin_top"
            app:cardElevation="@dimen/margin_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!--<ImageView-->
                <!--android:layout_width="@dimen/icon_menu_size"-->
                <!--android:layout_height="@dimen/icon_menu_size"-->
                <!--android:src="@drawable/icon_service" />-->

                <com.truonglam.tl_hotel.ui.widgets.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_service"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/icon_menu_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="@string/hotel_service"
                    android:textSize="@dimen/text_size_edittext" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRoom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/margin_start"
            android:layout_marginRight="@dimen/margin_end"
            android:layout_marginBottom="@dimen/margin_start"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/margin_top"
            app:cardElevation="@dimen/margin_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <com.truonglam.tl_hotel.ui.widgets.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_room"
                    android:textColor="#E04F5F"
                    android:textSize="@dimen/icon_menu_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="@string/hotel_room_manager"
                    android:textSize="@dimen/text_size_edittext" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvAccount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/margin_start"
            android:layout_marginRight="@dimen/margin_end"
            android:layout_marginBottom="@dimen/margin_start"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/margin_top"
            app:cardElevation="@dimen/margin_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.truonglam.tl_hotel.ui.widgets.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_account"
                    android:textColor="#666666"
                    android:textSize="@dimen/icon_menu_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="@string/hotel_account_management"
                    android:textSize="@dimen/text_size_edittext" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </GridLayout>
</LinearLayout>