<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_room"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_card_view_height"
    android:layout_marginStart="@dimen/margin_top"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginEnd="@dimen/margin_top"
    app:cardCornerRadius="@dimen/margin_top"
    android:foreground="?attr/selectableItemBackground">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_width="@dimen/icon_menu_size"
                android:layout_height="@dimen/icon_menu_size"
                android:src="@drawable/icon_room" />

            <TextView
                android:id="@+id/txt_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginLeft="@dimen/margin_start"
                android:text="LÃ¢m"
                android:layout_toRightOf="@id/img_logo"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/text_size_item_service" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_marginEnd="@dimen/margin_end"
            android:src="@drawable/ic_more_vert"
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

</android.support.v7.widget.CardView>