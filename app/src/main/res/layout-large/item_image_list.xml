<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvImage"
    android:layout_width="@dimen/cardview_item_rv"
    android:layout_height="@dimen/cardview_item_rv"
    android:layout_marginEnd="@dimen/margin_end"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_demo" />

        <ImageView
            android:id="@+id/btnDeleteImage"
            android:src="@drawable/icon_delete_image"
            android:layout_gravity="end"
            android:layout_width="@dimen/icon_delete_image_size"
            android:layout_height="@dimen/icon_delete_image_size" />

    </FrameLayout>
</android.support.v7.widget.CardView>