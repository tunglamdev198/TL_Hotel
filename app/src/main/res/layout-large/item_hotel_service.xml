<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHotelService"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_card_view_height"
    android:layout_marginStart="@dimen/margin_top"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginEnd="@dimen/margin_top"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/margin_top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_start"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/vertical_card_view_height"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_top">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_service" />

            </FrameLayout>

            <TextView
                android:id="@+id/txtServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_start"
                android:text="LÃ¢m"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/text_size_edittext" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_show_optoion"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/margin_end"
            android:src="@drawable/ic_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</android.support.v7.widget.CardView>